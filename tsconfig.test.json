{
    "extends": "./tsconfig.server.json",
    "compilerOptions": {
        "paths": {
            "@serv/*": [
                "./server/src/*"
            ],
            "@src/*": [
                "./src/*"
            ],
            "@app/*": [
                "./app/*"
            ],
            "@utils/*": [
                "./utils/*"
            ]
        }
    },
    "include": [
        "src",
        "server",
        "app",
        "shared",
        "utils"
    ]
}