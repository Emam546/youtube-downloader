{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@serv/*": ["./server/src/*"],
      "@scripts/*": ["./scripts/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["server/src", "scripts", "./build.ts"]
}
