{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@serv/*": ["./server/src/*"],
      "@shared/*": ["./shared/*"],
      "@utils/*": ["./utils/*"],
      "@app/*": ["./app/*"],
      "@shared/renderer/*": ["./app/renderer/shared/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "skipLibCheck": true
  },
  "include": ["src", "shared", "utils", "./scripts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
