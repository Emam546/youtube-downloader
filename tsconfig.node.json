{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "app/main/**/*",
        "app/preload/**/*",
        "shared/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "types": [
            "electron-vite/node"
        ],
        "module": "CommonJS",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "src/shared/*"
            ]
        },
    }
}