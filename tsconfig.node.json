{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "./app/main/**/*",
        "./app/preload/**/*",
        "./app/renderer/shared/*",
        "./server/src",
        "shared/**/*",
        "utils",
    ],
    "compilerOptions": {
        "rootDir": "./",
        "composite": true,
        "types": [
            "electron-vite/node"
        ],
        "baseUrl": ".",
        "skipLibCheck": false,
        "paths": {
            "@app/*": [
                "./app/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@shared/renderer/*": [
                "./app/renderer/shared/*"
            ],
            "@serv/*": [
                "./server/src/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
        },
    }
}