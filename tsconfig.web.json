{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "./app/renderer/**/env.d.ts",
        "./app/renderer/**/*",
        "./shared",
        "./utils"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "skipLibCheck": false,
        "paths": {
            "@renderer/*": [
                "./app/renderer/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
            "@shared/renderer/*": [
                "./app/renderer/shared/*"
            ]
        }
    }
}